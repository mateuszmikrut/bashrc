# Vars
EMAIL="mateusz.mikrut@gmail.com"
mydomain="lubiecyce.tk"

# Load keys
function agent_loadkeys(){
	ssh-add -l &> /dev/null
	if [ $? -gt 0 ]; then
		echo -n "Load keys y/[n]? "
		read ans
		case $ans in
			y | Y | yes ) 
				ssh-add ~/.ssh/micro_ssh_key
				date | gpg -r $EMAIL -e > /tmp/$$ && gpg -d /tmp/$$ && rm -f /tmp/$$
			;;
			*)
				echo "Not loading keys this time"
			;;
		esac
	fi
}

# Start agents
agent_start
agent_loadkeys


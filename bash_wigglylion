# Vars
EMAIL="mateusz.mikrut@gmail.com"
mydomain="lubiecyce.tk"

# Load keys function
function agent_loadkeys_kali(){
	ssh-add -l > /dev/null
	if [ $? -gt 0 ]; then
		echo -n "Load ssh keys y/[n]? "
		read ans
		case $ans in
			y | Y | yes ) 
				ssh-add ~/.ssh/micro_ssh_key
				echo -n "Load gpg keys as well y/[n]? "
				read ans1
				case $ans1 in
				y | Y | yes ) 
					date | gpg -r $EMAIL -e > /tmp/$$ && gpg -d /tmp/$$ && rm -f /tmp/$$
				;;
				*)
					echo "Not loading gpg keys this time"
				;;
				esac
			;;
			*)
				echo "Not loading keys this time"
			;;
		esac
	fi
}


# Start agents
agent_start
agent_loadkeys_kali

